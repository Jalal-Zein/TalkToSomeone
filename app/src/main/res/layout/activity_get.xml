<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetActivity"
    android:orientation="vertical"
    android:background="@color/dark_grey_teal"
    >

    <TextView
        android:id="@+id/get_textview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:text=""
        android:gravity="center"
        android:layout_marginTop="300dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />

    <Button
        android:id="@+id/get_button_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="GET SOMEONE!"
        android:textSize="20sp"
        android:backgroundTint="@color/jalal_teal"
        android:padding="20dp"
        />

    <Button
        android:id="@+id/get_button_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHOW ALL PEOPLE!"
        android:textSize="20sp"
        android:backgroundTint="@color/jalal_teal"
        android:padding="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />

</LinearLayout>